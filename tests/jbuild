; Fake META Files

(alias ((name drivers)))

(alias
 ((name drivers)
  (package caqti)
  (deps (META.caqti
         ../lib/caqti.cma
         ../lib/caqti.cmxs))))
(rule
 ((targets (META.caqti))
  (deps (../META.caqti))
  (action
   (with-stdout-to ${@}
    (progn
      (echo "directory = \"../lib\"\n")
      (cat ${<}))))))

(alias
 ((name drivers)
  (package caqti-driver-mariadb)
  (deps (META.caqti-driver-mariadb
         ../lib-driver/caqti_driver_mariadb.cma
         ../lib-driver/caqti_driver_mariadb.cmxs))))
(rule
 ((targets (META.caqti-driver-mariadb))
  (deps (../META.caqti-driver-mariadb))
  (action
   (with-stdout-to ${@}
    (progn
      (echo "directory = \"../lib-driver\"\n")
      (cat ${<}))))))

